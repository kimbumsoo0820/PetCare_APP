<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A1A1A"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/add_pet"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add2"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="펫 추가"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이펫"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:background="#1A1A1A"/>
        <Button
            android:id="@+id/back_mypet_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로"
            android:layout_marginLeft="70dp"
            android:background="#1A1A1A"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_marginLeft="85dp"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/click_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dogcat_2"
                />



        </LinearLayout>



    </LinearLayout>
<LinearLayout
    android:background="#C2D1DF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/change_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대표 펫 사진 변경"
        android:background="#C2D1DF"
        android:textColor="#000000"
        android:layout_marginLeft="170dp"
        />
    <Button
        android:id="@+id/get_petinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="펫정보 확인 버튼"
        android:background="#C2D1DF"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"
        />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#C2D1DF">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름               "
            android:textColor="#ffffff"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종류               "
            android:textColor="#ffffff"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별               "
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

<LinearLayout
    android:layout_marginLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/result1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/result2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/result4"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp" />


</LinearLayout>




    </LinearLayout>



</LinearLayout>